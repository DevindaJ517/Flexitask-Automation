# ===========================================
# FlexiTask Automation - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# ===========================================
# Supabase Configuration (Required)
# ===========================================
# Get these from: Supabase Dashboard -> Settings -> API
SUPABASE_URL=https://qdtmbfuwonsdmfhtasqp.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# ===========================================
# Telegram Configuration (Required)
# ===========================================
# Create a bot using @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your-bot-token-from-botfather
TELEGRAM_CHANNEL_ID=@your-channel-name

# ===========================================
# Redis Configuration
# ===========================================
# For local development: redis://localhost:6379/0
# For Upstash (production): rediss://default:xxx@xxx.upstash.io:6379
REDIS_URL=redis://localhost:6379/0

# ===========================================
# Job Site Configuration
# ===========================================
JOB_SITE_URL=https://flexi-task-zeta.vercel.app

# ===========================================
# Polling Configuration
# ===========================================
# How often to check for new jobs (in seconds)
POLLING_INTERVAL_SECONDS=60
